generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Merchant {
  id                  String   @id
  websiteName         String
  websiteLink         String   @unique
  walletPublicAddress String   @unique
  supportPhone        String
  supportEmail        String
  brandColor          String
  brandImage          String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  Pages               Page[]   @relation("Page")
}

model Page {
  id               String   @id
  merchantId       String
  programPublicKey String
  type             String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  Orders           Order[]  @relation("Order")

  merchant Merchant @relation("Page", fields: [merchantId], references: [id])

  @@index([merchantId], name: "merchantId_fk")
}

model Order {
  id                Int      @id @default(autoincrement())
  merchantId        String // this merchant id is actually the brandName
  pageId            String // this page is the `slug` or `id`
  customerPublicKey String
  orderPublicKey    String   @unique
  amount            Decimal
  status            String   @default("PENDING")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  page Page @relation("Order", fields: [pageId], references: [id])
}
